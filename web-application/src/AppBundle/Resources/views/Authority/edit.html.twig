                            <i class="fa fa-check"></i> Update
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('admin_authorities.index') }}">
                            <i class="fa fa-arrow-left"></i> Back to the list
                        </a>
                    </li>
                    <li>
                        <a class="btn btn-primary btn-sm" href="{{ path('admin_authorities.show', {id:entity.id}) }}">
                            <i class="fa fa-arrow-left"></i> Back to the item
                        </a>
                    </li>
                    <li>{{ form(delete_form) }}</li>
                </ul>
            {% endblock %}
        {% endembed %}

        {{ form(edit_form) }}

    {% endblock %}

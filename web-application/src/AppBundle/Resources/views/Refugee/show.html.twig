{% extends 'AppBundle::baseAdmin.html.twig' %}
    {% block body -%}
        <h1>Refugee</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Firstname</th>
                <td>{{ entity.firstName }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ entity.lastName }}</td>
            </tr>
            <tr>
                <th>Externalid</th>
                <td>{{ entity.externalId }}</td>
            </tr>
            <tr>
                <th>Birthdate</th>
                <td>{{ entity.birthDate|date(defaultDateTimeFormat) }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active|fontAwesome() }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="list-inline">
            <li>
                <a class="btn btn-primary" href="{{ path('admin_refugees.index') }}">
                    <i class="fa fa-arrow-left"></i> Back to the list
                </a>
            </li>
            <li>
                <a class="btn btn-primary"
                   href="{{ path('admin_refugees.edit', { 'id': entity.id }) }}">
                    <i class="fa fa-edit"></i> Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    {% endblock %}

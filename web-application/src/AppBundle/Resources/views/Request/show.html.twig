{% extends 'AppBundle::baseAdmin.html.twig' %}

    {% block body -%}
        <h1>Request</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ entity.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ entity.longitude }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>

            <tr>
                <th>Refugee</th>
                <td>{{ entity.refugee }}</td>
            </tr>

            <tr>
                <th>Citizen</th>
                <td>{{ entity.citizen }}</td>
            </tr>

            <tr>
                <th>Created at</th>
                <td>{{ entity.createdAt|date(defaultDateTimeFormat) }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ entity.updatedAt|date(defaultDateTimeFormat) }}</td>
            </tr>
            <tr>
                <th>Active</th>
                <td>{{ entity.active|fontAwesome() }}</td>
            </tr>
            </tbody>
        </table>

        <ul class="list-inline">
            <li>
                <a class="btn btn-primary" href="{{ path('admin_request.index') }}">
                    <i class="fa fa-arrow-left"></i> Back to the list
                </a>
            </li>
            <li>
                <a class="btn btn-primary"
                   href="{{ path('admin_request.edit', { 'id': entity.id }) }}">
                    <i class="fa fa-edit"></i> Edit
                </a>
            </li>
            <li>{{ form(delete_form) }}</li>
        </ul>
    {% endblock %}

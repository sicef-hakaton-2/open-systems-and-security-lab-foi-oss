{% extends 'AppBundle:Layout:frontAppLayout.html.twig' %}

{% block body %}

    <div id="loginPage1">
        <div class="row-centered fullPageForm">
            <div class="col-md-5 col-centered well">
                <div class="col-md-10 col-centered">
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <p>
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        </p>
                        <a href="{{ path('fos_user_security_logout') }}" class="btn btn-danger">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>

                    {% else %}
                        <h1>{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</h1>

                        {% include "ZantolovAppBundle:Registration:register_content.html.twig" %}
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock body %}

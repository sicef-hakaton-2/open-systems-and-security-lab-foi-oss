<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/splash_margin"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/text_borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Borderless"
        android:layout_above="@+id/text_powered_by"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/text_powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/splash_margin"
        android:layout_alignParentBottom="true"
        android:text="Powered by SICEF"/>

</RelativeLayout>